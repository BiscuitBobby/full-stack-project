pipeline {
    agent any
    environment {
        GOOGLE_API_KEY = credentials('google-api-key-id')
    }
    stages {
        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        stage('Lint') {
            steps {
                sh 'ruff check .'
            }
        }
        stage('Test') {
            steps {
                sh 'pytest --junitxml=results.xml'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t project .'
            }
        }
    }
    post {
        success {
            echo 'Deploying locally...'
            sh "bash run.sh"
        }
        always {
            junit 'results.xml'
        }
    }
}
